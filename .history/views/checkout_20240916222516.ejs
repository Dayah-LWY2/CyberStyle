<div class="checkout-container">
  <h1>Checkout</h1>
  <div>
      <label for="address">Delivery Address:</label>
      <textarea id="address" name="address" rows="4" placeholder="Enter your name, phone number, and address..."></textarea>
  </div>

  <table class="products-table">
      <thead>
          <tr>
              <th>Product Name</th>
              <th>Unit Price</th>
              <th>Quantity</th>
              <th>Item Total</th>
          </tr>
      </thead>
      <tbody>
          <% cart.forEach(item => { %>
              <tr>
                  <td><%= item.product.name %></td>
                  <td>RM <%= item.product.price.toFixed(2) %></td>
                  <td><%= item.quantity %></td>
                  <td>RM <%= (item.product.price * item.quantity).toFixed(2) %></td>
              </tr>
          <% }) %>
      </tbody>
  </table>

  <div class="remarks">
      <label for="remark">Remark:</label>
      <input type="text" id="remark" name="remark" placeholder="Please leave a message...">
  </div>

  <div class="total-section">
      <p>Shipping: RM 5.90</p>
      <p>Total: RM <%= (cart.reduce((total, item) => total + (item.quantity * item.product.price), 0) + 5.90).toFixed(2) %></p>
  </div>

  <div class="payment-method">
    <form action="/process-checkout" method="post">
    <label>
        <input type="radio" name="paymentMethod" value="online-banking" required> Online Banking
    </label>
    <br>
    <label>
        <input type="radio" name="paymentMethod" value="cod" required> Cash on Delivery
    </label>
</div>

<button type="submit" class="btn">Place Order</button>

    </form>
</div>
