<div class="profile-container">
  <h1>User Profile</h1>
  <div class="profile-info">
      <label for="username">Username:</label>
      <input type="text" id="username" value="<%= user.username %>" disabled>

      <label for="email">Email:</label>
      <input type="email" id="email" value="<%= user.email %>" disabled>

      <label for="phone">Phone:</label>
      <input type="text" id="phone" value="<%= user.phone %>" disabled>

      <label for="gender">Gender:</label>
      <select id="gender" name="gender" disabled>
      <option value="" disabled>Select Gender</option>
      <option value="male" <%= user.gender === 'male' ? 'selected' : '' %>>Male</option>
      <option value="female" <%= user.gender === 'female' ? 'selected' : '' %>>Female</option>
      <option value="other" <%= user.gender === 'other' ? 'selected' : '' %>>Other</option>
      </select>

      <label for="dob">Date of Birth:</label>
      <input type="date" id="dob" value="<%= user.dob %>" disabled>

      <label for="address">Address:</label>
      <textarea id="address" disabled><%= user.address %></textarea>

      <label for="password">Password :</label>
      <input type="password" id="password" value="<%= user.password %>" disabled>
  </div>

  <div class="profile-buttons">
      <button id="edit-btn" class="profile-button">Edit</button>
      <button id="save-btn" class="profile-button profile-hidden">Save</button>
  </div>
</div>

<script src="script.js"></script>